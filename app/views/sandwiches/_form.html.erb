<div class="new-sandwich-form text-center">
  <h1>New Sandwich</h1>

  <%= form_for @sandwich,  :html => { :multipart => true } do |f| %>
    <% if @sandwich.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@sandwich.errors.count, "error") %> prohibited this sandwich from being saved:</h2>

        <ul>
        <% @sandwich.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "What is it?" %><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.file_field :sandwich_image, class: "sandwich-file-input 
glyphicon glyphicon-camera", id: "sandwich[sandwich_image]", data: { multiple_caption: "{count} files selected "} %>
      <label class="btn" for="sandwich[sandwich_image]">
        <span class="glyphicon glyphicon-camera"></span>
      </label>
      <span class="files-picked"></span>
    </div>
    <div class="form-group">
      <%= f.submit %>
    </div>
  <% end %>
</div>
